#include "main.h"
#define NULL ((void*)0)
/**
*strchr -  a function that locates a character in a string.
*@s: pointer
*@c: value
*Return: new value of s.
*/
char *_strchr(char *s, char c)
{
int i = 0;
while (s[i] != '\0')
{
if (s[i] == c)
{
return ((char *)&s[i]);
}
i++;
if (c == '\0')
{
return ((char *)&s[i]);
}
}
return (NULL);     
}
